{% extends "BootcampLayoutBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
<div class="carouselblank">&nbsp;</div>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
    <div class="col-lg-12">
        <div class="row">
   <div class="col-lg-8">
        
  <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin" role="form">
  
    <h2 class="form-signin-heading">Panel logowania</h2>
  
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    
    <input class="form-control" placeholder="Nazwa użytkownika" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    <input class="form-control" placeholder="Hasło" type="password" id="password" name="_password" required="required"  />

    <label class="checkbox">
      <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
    </label>
    
    <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" >{{ 'security.login.submit'|trans }}</button>
  </form>
   </div>
  
   <div class="col-lg-4">
                    <div class="sidebar-module">
                        <h4>Nie masz jeszcze konta?</h4>
                        <a href="{{ path('fos_user_registration_register') }}"><button type="button" class="btn btn-lg btn-danger btn-block">
                            Zarejestruj się
                        </button></a><br/>
                    </div>
   </div>
        </div>
    </div>
</div>  

{% endblock body %}